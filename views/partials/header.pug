header.header-v2
  // Header desktop
  .container-menu-desktop.trans-03
    .wrap-menu-desktop
      nav.limiter-menu-desktop.p-l-45
        // Logo desktop
        a.logo(href='/')
          img(src='/images/bg-logo.svg', alt='Logo')
        // Menu desktop
        .menu-desktop
          ul.main-menu
            li.active-menu
              a(href='/') Home
            each category in layout.categories
              li
                a(href=`/category/${category.link.uid}`)= category.label
        // Icon header
        .wrap-icon-header.flex-w.flex-r-m.h-full
          .flex-c-m.h-full.p-r-24
            .icon-header-item.cl2.hov-cl1.trans-04.p-lr-11.js-show-modal-search
              i.zmdi.zmdi-search
          .flex-c-m.h-full.p-l-18.p-r-25.bor5
            .icon-header-item.cl2.hov-cl1.trans-04.p-lr-11.icon-header-noti.js-show-cart(data-notify='2')
              i.zmdi.zmdi-shopping-cart
          .flex-c-m.h-full.p-lr-19
            .icon-header-item.cl2.hov-cl1.trans-04.p-lr-11.js-show-sidebar
              i.zmdi.zmdi-menu
  // Header Mobile
  .wrap-header-mobile
    // Logo moblie
    .logo-mobile
      a(href='/')
        img(src='/images/bg-logo.svg', alt='Logo')
    // Icon header
    .wrap-icon-header.flex-w.flex-r-m.h-full.m-r-15
      .flex-c-m.h-full.p-r-10
        .icon-header-item.cl2.hov-cl1.trans-04.p-lr-11.js-show-modal-search
          i.zmdi.zmdi-search
      .flex-c-m.h-full.p-lr-10.bor5
        .icon-header-item.cl2.hov-cl1.trans-04.p-lr-11.icon-header-noti.js-show-cart(data-notify='2')
          i.zmdi.zmdi-shopping-cart
    // Button show menu
    .btn-show-menu-mobile.hamburger.hamburger--squeeze
      span.hamburger-box
        span.hamburger-inner
  // Menu Mobile
  .menu-mobile
    ul.main-menu-m
      li.active-menu
        a(href='/') Home
      each category in layout.categories
        li
          a(href=`/category/${category.link.uid}`)= category.label
  // Modal Search
  .modal-search-header.flex-c-m.trans-04.js-hide-modal-search
    .container-search-header
      button.flex-c-m.btn-hide-modal-search.trans-04.js-hide-modal-search
        img(src='images/icons/icon-close2.png', alt='CLOSE')
      form.wrap-search-header.flex-w.p-l-15
        button.flex-c-m.trans-04
          i.zmdi.zmdi-search
        input.plh3(type='text', name='search', placeholder='Search...')